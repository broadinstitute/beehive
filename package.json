    "@remix-run/serve": "^v2.9.2",
    "@sherlock-js-client/sherlock": "^1.5.2",
    "lucide-react": "^0.396.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-infinite-scroll-component": "^6.1.0",
    "remix-utils": "^7.6.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^v2.9.2",
    "@remix-run/eslint-config": "^v2.9.2",
