    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-fail-on-warn": "^0.2.1",
    "postcss-import": "^16.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "prettier": "3.3.2",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "overrides": {
