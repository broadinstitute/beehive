{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:remix": "remix build --sourcemap",
    "dev": "run-p \"dev:*\"",
    "dev:remix": "remix dev",
    "start": "remix-serve ./build/index.js",
    "typecheck": "npx tsc -b",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.2",
    "@googleapis/calendar": "^9.3.2",
    "@octokit/rest": "^20.0.2",
    "@react-hook/resize-observer": "^1.2.6",
    "@remix-run/node": "^v2.1.0",
    "@remix-run/react": "^v2.1.0",
    "@remix-run/serve": "^v2.1.0",
    "@sherlock-js-client/sherlock": "^0.2.35",
    "lucide-react": "^0.290.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-component": "^6.1.0",
    "remix-utils": "^7.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^v2.1.0",
    "@remix-run/eslint-config": "^v2.1.0",
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-fail-on-warn": "^0.2.1",
    "postcss-import": "^15.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "prettier": "3.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "overrides": {
    "@remix-run/node": "$@remix-run/node",
    "@remix-run/react": "$@remix-run/react",
    "@remix-run/serve": "$@remix-run/serve",
    "@remix-run/dev": "$@remix-run/dev",
    "@remix-run/eslint-config": "$@remix-run/eslint-config"
  }
}
